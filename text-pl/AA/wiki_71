 QTextStream stream(&amp;file);
 std::string vshader_zrodlo = stream.readAll().toStdString();
 GLuint shader = glCreateShader(GL_VERTEX_SHADER);
 GLchar* srcs[] = {(GLchar*)vshader_zrodlo.c_str()};
